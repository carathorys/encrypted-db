{
  "name": "encrypted-db",
  "version": "0.0.15",
  "description": "Encrypted IndexedDB wrapper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "http://github.com/carathorys/encrypted-db",
  "author": "carathorys",
  "license": "MIT",
  "preview": true,
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "doc:purge": "rimraf docs",
    "doc:run": "typedoc --theme markdown --out docs/ src/",
    "doc": "yarn doc:purge && yarn doc:run",
    "tslint": "tslint src/**/*.ts -t verbose",
    "lint": "yarn tslint",
    "pretest": "tsc -p tsconfig.test.json",
    "test": "nyc mocha -p tsconfig.test.json test-js/test/index.js",
    "_posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "test:watch": "mocha-typescript-watch -p tsconfig.test.json ./test-js/test/index.js",
    "release:build": "yarn build",
    "release:docs": "yarn doc",
    "release:copy": "node ./scripts/release.js",
    "prerelease": "yarn release:build && yarn release:copy",
    "release": "npm publish --cwd ./dist --tag next"
  },
  "nyc": {},
  "dependencies": {
    "@types/localforage": "^0.0.34",
    "crypto-js": "^3.1.9-1",
    "indexeddb-mock": "^1.1.0",
    "localforage": "^1.5.2"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "chai": "^4.1.2",
    "codecov": "^2.3.1",
    "fs-extra": "^4.0.2",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.11",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typedoc-plugin-markdown": "^1.0.11",
    "typescript": "^2.5.3"
  }
}
