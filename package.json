{
  "name": "encrypted-db",
  "version": "0.0.7",
  "description": "Encrypted IndexedDB wrapper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "http://github.com/carathorys/encrypted-db",
  "author": "carathorys",
  "license": "MIT",
  "preview": true,
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "watch": "tsc --watch",
    "doc:purge": "rimraf docs",
    "doc:run": "typedoc --theme markdown --out docs/ src/",
    "doc": "yarn doc:purge && yarn doc:run",
    "tslint": "tslint src/**/*.ts -t verbose",
    "lint": "yarn tslint",
    "release:build": "yarn build",
    "release:docs": "yarn doc",
    "release:copy": "node ./scripts/release.js",
    "prerelease": "yarn release:build && yarn release:docs && yarn release:copy",
    "release": "npm publish dist --tag next"
  },
  "dependencies": {
    "crypto-js": "^3.1.9-1"
  },
  "devDependencies": {
    "fs-extra": "^4.0.2",
    "rimraf": "^2.6.2",
    "semver": "^5.4.1",
    "tslint": "^5.7.0",
    "typedoc": "^0.9.0",
    "typedoc-plugin-markdown": "^1.0.11",
    "typescript": "^2.5.3"
  }
}
