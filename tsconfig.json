{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2016",
    "noImplicitAny": false,
    "declaration": true,
    "removeComments": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true
  },
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  },
  "files": [
    "./src/index.ts"
  ]
}
